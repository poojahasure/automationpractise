package pattern;

public class Pattern {
	public static void main (String [] args) {
		Pattern.test();	
		
	}
	public static void test() {
		int n=4;
		for(int i=0;i<=n;i++){ 
		for(int k=0;k<=n;k++) {
			System.out.print(" ");
		}
		for(int j=1;j<=i;j++) {
			System.out.print("* ");
		}
		System.out.println();
		}
		
	}

}
