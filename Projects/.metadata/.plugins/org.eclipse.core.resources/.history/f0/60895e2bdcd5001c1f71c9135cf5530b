package org.string;

public class StrReplace {
	
	public static void main(String args[]) {
		String str="Garden is Beautiful";
		String str1="Garden is Beautiful is ";
		String str2="ajsADH8492384ksjdj";
		
//		System.out.println(str.replace('a', '*'));
		System.out.println(str.replace("is","+"));
		
		System.out.println(str1.replaceFirst("is","#"));
		System.out.println(str1.replaceAll("is","#"));
		
//		System.out.println(str2.replaceAll("\\d","@"));
//		System.out.println(str2.replaceAll("\\D","@"));
		System.out.println(str2.replaceAll("\\p{Upper}","%"));
		
		
	}

}
